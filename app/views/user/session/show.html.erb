<%- model_class = User -%>
<%- content_for :sub_title, :Profile -%>
<div class="panel panel-default">
  <div class="panel-heading">Public profile</div>
  <div class="panel-body">

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= current_user.name %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
    <dd><%= current_user.username %></dd>
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= current_user.email %></dd>
    <dt><strong><%= model_class.human_attribute_name(:roles) %>:</strong></dt>
    <dd><%= current_user.roles %></dd>
  </dl>
  </div>
</div>
