<%= form_for @user, :html => { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :state, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :username, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :roles, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :roles, class: 'form-control' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, class: 'btn' %>
  </div>
<% end %>
