<%- model_class = User -%>
<%- content_for :sub_title do -%>
  <%=t '.title', :default => model_class.model_name.human %>
<%- end -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @user.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @user.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @user.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password_digest) %>:</strong></dt>
  <dd><%= @user.password_digest %></dd>
  <dt><strong><%= model_class.human_attribute_name(:roles) %>:</strong></dt>
  <dd><%= @user.roles %></dd>
</dl>

<div class="form-actions">
  <%= @user.link_to_edit %>
  <%= @user.link_to_destroy %>
</div>
